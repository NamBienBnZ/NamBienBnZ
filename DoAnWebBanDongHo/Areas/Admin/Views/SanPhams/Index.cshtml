@model IEnumerable<DoAnWebBanDongHo.Models.SANPHAM>


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Sản Phẩm</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Tên loại sản phẩm
                                </th>
                                <th>
                                    Tên thương hiệu
                                </th>
                                <th>
                                    Tên sản phẩm
                                </th>
                                <th>
                                    Hình ảnh
                                </th>
                                <th>
                                    Mô tả
                                </th>
                                <th>
                                    Số lượng
                                </th>
                                <th>
                                    Đơn giá
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LOAISANPHAM.TENLOAISP)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.THUONGHIEU.TENTH)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TENSP)
                                    </td>
                                    <td>
                                        <img src="~/Content/Images/@Url.Content(item.HINH)" class="img-responsive" alt="" width="75" height="75" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MOTA)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SOLUONG)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DONGIA)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.MASP }) |
                                        @Html.ActionLink("Chi Tiết", "Details", new { id = item.MASP }) |
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.MASP })
                                    </td>
                                </tr>
                            }
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
